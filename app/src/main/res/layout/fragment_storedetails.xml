<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivStorePicture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/instagram_home_outline_24" />

    <TextView
        android:id="@+id/tvStoreName"
        android:layout_width="176dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="StoreName"
        app:layout_constraintStart_toEndOf="@+id/ivStorePicture"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvStoreLocation"
        android:layout_width="176dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        android:text="Location"
        app:layout_constraintStart_toEndOf="@+id/ivStorePicture"
        app:layout_constraintTop_toBottomOf="@+id/tvStoreName" />

    <RatingBar
        android:id="@+id/rbDisplayRating"
        style="@android:style/Widget.DeviceDefault.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="130dp" />

<!--    <RatingBar android:id="@+id/ratingBar1"
        style="@android:style/PriceRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </RatingBar>-->

</android.support.constraint.ConstraintLayout>