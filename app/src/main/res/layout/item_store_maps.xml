<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="50dp">

    <ImageView
        android:id="@+id/ivStoreImage"
        android:layout_width="58dp"
        android:layout_height="109dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/background_dark" />

    <TextView
        android:id="@+id/tvStoreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivStoreImage"
        android:text="Name" />

    <TextView
        android:id="@+id/tvStoreLocation"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/tvStoreName"
        android:layout_toEndOf="@+id/ivStoreImage"
        android:text="Location" />

    <TextView
        android:id="@+id/tvStoreRating"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Rating" />

    <TextView
        android:id="@+id/tvWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStoreLocation"
        android:layout_toEndOf="@+id/ivStoreImage"
        android:text="TextView"
        tools:text="Website" />

    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWebsite"
        android:layout_toEndOf="@+id/ivStoreImage"
        android:text="PhoneNumber" />

</android.widget.RelativeLayout>