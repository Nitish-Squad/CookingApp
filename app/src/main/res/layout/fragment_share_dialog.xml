<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="@drawable/rounded_corners_shape"
    tools:context=".ShareRecipe.NotifyShareDialog">


    <TextView
        android:id="@+id/tvShareTitle"
        android:layout_width="225dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="SHARE"
        android:textAlignment="center"
        android:textSize="30sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerView"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvShareTitle"
        android:layout_below="@+id/tvShareTitle"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="-1dp" />

    <ImageButton
        android:id="@+id/fb_share"
        android:layout_width="218dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/RecyclerView"
        android:backgroundTint="#3b5998"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/flogo_large" />

</RelativeLayout>