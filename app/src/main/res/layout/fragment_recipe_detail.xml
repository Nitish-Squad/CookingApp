<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".RecipeDetailFragment">


    <ImageView
        android:id="@+id/ivRecipeImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/ivRecipeImage"
        android:layout_toStartOf="@+id/ivSaveRecipe"
        android:text="Title"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvTitle"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="10dp"
        android:text="Time" />

    <TextView
        android:id="@+id/tvIngredientHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivRecipeImage"
        android:layout_margin="10dp"
        android:text="@string/IngredientHeader" />

    <ListView
        android:id="@+id/lvIngredients"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"

        android:layout_alignRight="@id/ivRecipeImage"
        android:layout_below="@+id/tvIngredientHeader"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvTitle"
        android:layout_alignTop="@+id/lvIngredients"
        android:layout_marginRight="10dp"
        android:text="Description"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btStartRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tvTitle"
        android:layout_marginBottom="70dp"
        android:text="Start Recipe" />

    <Button
        android:id="@+id/btStartMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lvIngredients"
        android:layout_alignStart="@+id/tvTitle"
        android:text="Maps" />

    <ImageView
        android:id="@+id/ivSaveRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_vector_heart_stroke" />

    <RatingBar
        android:id="@+id/rbDisplayRating"
        style="@android:style/Widget.DeviceDefault.RatingBar.Small"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTime"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/ivRecipeImage" />

    <LinearLayout
        android:id="@+id/llComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btStartRecipe"
        android:layout_alignStart="@+id/tvTitle"
        android:layout_below="@+id/tvCommentLabel"
        android:layout_marginTop="10dp"
        android:orientation="vertical"></LinearLayout>

    <TextView
        android:id="@+id/tvCommentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvTitle"
        android:layout_below="@+id/tvDescription"
        android:layout_marginTop="10dp"
        android:text="Comments" />

    <ImageView
        android:id="@+id/fb_share_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/tvTime"
        android:layout_toEndOf="@+id/tvTitle"
        android:src="@drawable/share_4" />

</RelativeLayout>