<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feed.FeedFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/llTitle"
        android:gravity="center"

        android:layout_alignParentTop="true">

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvFeed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tvFilterByTag" />
    <ProgressBar
        android:id="@+id/pbLoading"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="@color/colorPrimaryDark"
        android:indeterminateTint="@color/colorPrimaryDark"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tvFilterByTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llTitle"

        android:layout_margin="10dp"
        android:text="Filter By Tags"
        android:textSize="16sp"
        android:textAppearance="@style/default_font_medium"/>

    <TextView
        android:id="@+id/tvFilterByIngredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvFilterByTag"
        android:layout_toEndOf="@id/tvFilterByTag"
        android:text="Filter By Ingredient"
        android:textAppearance="@style/default_font_medium"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/spSort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvFilterByTag"
        android:layout_marginTop="-3dp"
        android:layout_toEndOf="@id/tvFilterByIngredient" />

</RelativeLayout>