<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FeedFragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvFeed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:layout_below="@id/tvFilterResults" />

    <TextView
        android:id="@+id/tvFilterResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:text="Filter Recipes"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etSearchRecipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvFilterResults"
        android:layout_alignBottom="@id/tvFilterResults"
        android:layout_marginEnd="10dp"
        android:hint="Search Recipes" />

    <ImageView
        android:id="@+id/ivSearchIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvFilterResults"
        android:layout_alignBottom="@id/tvFilterResults"
        android:layout_toStartOf="@+id/etSearchRecipes"
        android:src="@android:drawable/ic_search_category_default" />

</RelativeLayout>