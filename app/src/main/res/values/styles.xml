<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/colorAccent</item>


    </style>

    <style name="default_font_medium">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="default_font_small">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="default_font_extrasmall">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="default_font_dark_faded">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name ="android:alpha">.16</item>
    </style>

    <style name="default_font_light_faded">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/darkPurple</item>
        <item name ="android:alpha">.16</item>
    </style>

    <style name="default_font_large">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="default_font_large_bold">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="default_font_medium_bold">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="cursive_font_medium">
        <item name="android:fontFamily">@font/sofia</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PriceRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/pricecustom_ratingbar</item>
        <item name="colorControlNormal">#c51162</item>
        <item name="colorControlActivated">#c51162</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


</resources>
